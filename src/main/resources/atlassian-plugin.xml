<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="dashboard-plugin"/>

    <!-- add our web resources -->
    <web-resource key="dashboard-plugin-resources" name="dashboard-plugin Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <transformation extension="soy">
            <transformer key="soyTransformer"/>
        </transformation>

        <resource type="download" name="dashboard-plugin.css" location="/css/dashboard-plugin.css"/>
        <resource type="download" name="dashboard-plugin.js" location="/js/dashboard-plugin.js"/>
        <resource type="download" name="images/" location="/images"/>

        <!-- Example Dashboard Item resources -->
        <resource type="download" location="soy/example-dashboard-item.soy" name="soy/example-dashboard-item.soy.js"/>
        <resource type="soy" location="/soy/example-dashboard-item.soy" name="Example.Dashboard.Item.Templates.Static"/>

        <context>dashboard-plugin</context>
    </web-resource>

    <!-- Example Dashboard Item -->
    <dashboard-item key="example-dashboard-item" i18n-name-key="example.dashboard.item.title">
        <definition>
            <title key="example.dashboard.item.title"/>
            <categories>
                <category>Jira</category>
            </categories>
            <author>
                <name>TUM</name>
            </author>
            <thumbnail
                    location="/download/resources/${atlassian.plugin.key}:dashboard-plugin-resources/images/pluginLogo.png"/>
        </definition>
        <description key="example.dashboard.item.description"/>
        <resource name="view" type="soy"
                  location=":dashboard-plugin-resources/Example.Dashboard.Item.Templates.Static"/>
        <context-provider class="org.pit.jira.ExampleDashboardItemContextProvider"/>
    </dashboard-item>

</atlassian-plugin>